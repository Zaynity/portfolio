---
import BaseLayout from '../../src/layouts/BaseLayout.astro'
import TopLayout from '../../src/layouts/TopLayout.astro'
import BottomLayout from '../../src/layouts/BottomLayout.astro'
import CustomisedBreadCrumbs from "../components/CustomisedBreadCrumbs.astro";

let {title, description, image, subTitle, canonicalURL} = Astro.props;

if (!subTitle) {
  subTitle = title;
}
---

<BaseLayout
  title={title}
  description={description}
  ogImage={image?.url}
  canonicalURL={canonicalURL}
>
  <main class="flex min-h-[80vh] flex-auto flex-col w-full p-4 max-w-screen-lg" transition:name="hero">
    <TopLayout>
      <div class="pb-2">
        <div class="mb-8">
          <CustomisedBreadCrumbs/>
        </div>
        <h2
          class="scroll-m-20 pb-6 text-4xl font-semibold tracking-tight first:mt-0 text-center"
        >
          {subTitle}
        </h2>
        <slot name="text-blocks"></slot>
      </div>
    </TopLayout>
    <BottomLayout>
      <div class="flex flex-wrap justify-center gap-4 w-full">
        <slot/>
      </div>
    </BottomLayout>
  </main>
</BaseLayout>
