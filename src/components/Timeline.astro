---
import {Button} from './ui/button'

export interface Experience {
  slug: string;
  data: {
    title: string;
    startDate: string;
    endDate: string;
    description: string;
    tags: string[];
    imageUrl: string;
  };
}

interface Props {
  experiences: Experience[];
}
const { experiences } = Astro.props as Props;

function formatLocalMonth(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleString('fr-FR', { month: 'long', year: 'numeric' });
}
---
<div class="timeline">
  {experiences.map((entry) => (
    <div class="timeline-item">
      <h3 class="timeline-title">{entry.data.title}</h3>
      <div class="timeline-content">
        <div class="timeline-image-container">
          <img src={entry.data.imageUrl} alt={entry.data.title} class="timeline-image" />
        </div>
        <div class="timeline-text">
          <p class="timeline-description">{entry.data.description}</p>
          <div class="timeline-date">
            De {formatLocalMonth(entry.data.startDate)} Ã  {formatLocalMonth(entry.data.endDate)}
          </div>
          <a href={`${import.meta.env.BASE_URL}/parcours/${entry.slug}`}>
            <Button variant="link" className="pl-0">En savoir plus</Button>
          </a>
        </div>
      </div>
    </div>
  ))}
</div>

<style>
.timeline {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  position: relative;
  padding-left: 2rem;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 1rem;
  top: 0;
  bottom: 0;
  width: 2px;
  background-color: #ccc;
  z-index: 0;
}

.timeline-item {
  display: flex;
  flex-direction: column;
  position: relative;
  margin-bottom: 1rem;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -1.4rem;
  top: 0.5rem;
  width: 1rem;
  height: 1rem;
  background-color: white;
  border-radius: 50%;
  border: 2px solid #ccc;
  z-index: 1;
}

.timeline-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 0.5rem;
}

.timeline-text {
  flex: 1;
}

.timeline-title {
  font-size: 1.25rem;
  font-weight: bold;
}

.timeline-description {
  font-size: 1rem;
}

.timeline-date {
  font-size: 0.875rem;
  color: #666;
}

.timeline-image-container {
  margin-right: 1rem;
}

.timeline-image {
  width: 100px;
  height: auto;
}
</style>